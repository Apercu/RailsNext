$base01: rgb(0,204,0);
$base02: rgb(38,153,38);
$base03: rgb(0,133,0);
$base04: rgb(57,230,57);
$base05: rgb(103,230,103);

$base11: rgb(0,180,84);
$base12: rgb(34,135,81);
$base13: rgb(0,117,54);
$base14: rgb(54,218,130);
$base15: rgb(98,218,154);

$base21: rgb(83,223,0);
$base22: rgb(88,167,42);
$base23: rgb(54,145,0);
$base24: rgb(126,239,60);
$base25: rgb(156,239,108);

* {
    outline: none;
    box-sizing: border-box;
    font-family: 'lemon';
}

a {
    text-decoration: none;
    font-size: 12px;
    color: white;
}

body {
    background-color: $base12;
    height: 100%;
    margin: 0;
}

.hidden {
    display: none;
}

.content {
    padding: 0 50px;
    .home {
        text-align: center;
        img {
            border-radius: 1000px;
        }
    }
}

.header {
    background-color: $base13;
    padding: 20px 50px;
    border-bottom: 5px solid rgba(black, .1);
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    > ul {
        margin: 0;
        padding: 0;
        li {
            list-style: none;
            cursor: pointer;
            display: inline;
            font-size: 25px;
            color: white;
            margin-right: 25px;
            padding: 5px;
            &:hover {
                border-bottom: 3px solid rgba(white, .3);
            }
        }
    }
}

.new_user {
    max-width: 500px;
    .field {
        position: relative;
        margin-bottom: 5px;
        input {
            position: absolute;
            right: 0;
        }
    }
}

#error_explanation {
    color: rgba(184, 0, 0, 0.6);
    margin-bottom: 20px;
    li {
        list-style-type: square;
    }
}

.field_with_errors {
    display: inline;
}

@font-face
{
    font-family: 'lemon';
    src: url('<%= asset_path("lemon.ttf") %>');
}
