<h2><%=t :signin %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :login, t('login') %><br />
  <%= f.text_field :login, autofocus: true %></div>

  <div><%= f.label :password, t('password') %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, t('remember_me') %></div>
  <% end -%>

  <div><%= f.submit t('signin') %></div>
<% end %>

<%= link_to t('forgot'), new_password_path(resource_name) %><br />
