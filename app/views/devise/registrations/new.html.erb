<h2><%=t :signup %>></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field"><%= f.label :login, t('login') %>
  <%= f.text_field :login, autofocus: true %></div>

  <div class="field"><%= f.label :email, t('email') %>
      <%= f.email_field :email %></div>

  <div class="field"><%= f.label :password, t('password') %>
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div class="field"><%= f.label :password_confirmation, t('confirmation') %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div class="field"><%= f.submit t('signup') %></div>
<% end %>
